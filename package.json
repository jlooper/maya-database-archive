{
	"name": "mayanarchive",
	"version": "0.1.0",
	"private": true,
	"main": "./src/assets/sass/styles.scss",
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"css-build": "node-sass --omit-source-map-url ./src/assets/sass/styles.scss ./public/css/styles.css",
		"css-watch": "npm run css-build -- --watch",
		"start": "npm run css-watch"
	},
	"dependencies": {
		"bulma": "^0.7.5",
		"core-js": "^2.6.5",
		"moment-timezone": "^0.5.27",
		"vue": "^2.6.10",
		"vue-moment": "^4.1.0",
		"vue-router": "^3.0.3",
		"vuelidate": "^0.7.4",
		"vuex": "^3.0.1",
		"vuex-persistedstate": "^2.7.0"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.12.0",
		"@vue/cli-plugin-eslint": "^3.12.0",
		"@vue/cli-service": "^3.12.0",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.16.0",
		"eslint-plugin-vue": "^5.0.0",
		"node-sass": "^4.13.1",
		"vue-template-compiler": "^2.6.10"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"rules": {},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	]
}
